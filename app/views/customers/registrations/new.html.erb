<div class='container'>
<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <%= f.fields_for :profile do |pf| %>
      <div class="field">
         <%= f.label :first_name %><br>
        <%= pf.text_field :first_name, placeholder: 'First name *' %>
      </div>
      <div class="field">
         <%= f.label :last_name %><br>
        <%= pf.text_field :last_name, placeholder: 'Last name *' %>
      </div>
      <div class="field">
         <%= f.label :phone %><br>
        <%= pf.text_field :phone, placeholder: 'Phone' %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <%= f.fields_for :profile do |profile_form| %>
     <%= f.label :address %><br>
      <%= profile_form.text_area :address, cols: 40, rows: 3 %>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "customers/shared/links" %>

</div>
